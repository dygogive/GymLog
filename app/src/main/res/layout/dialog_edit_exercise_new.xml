<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/my_primary_container"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Поле Name: 1 рядок, максимум 30 символів -->
        <EditText
            android:id="@+id/editTextExerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/exercise_name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="30"
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Поле Description: 3 рядки, максимум 100 символів -->
        <EditText
            android:id="@+id/editTextExerciseDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/description"
            android:importantForAutofill="no"
            android:inputType="text|textMultiLine"
            android:maxLength="100"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/editTextExerciseName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Motion (одиничний вибір через AlertDialog) -->
        <TextView
            android:id="@+id/textViewMotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/motion"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/editTextExerciseDescription"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonSelectMotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chose"
            app:layout_constraintBottom_toBottomOf="@+id/textViewMotion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textViewMotion"
            app:layout_constraintTop_toTopOf="@+id/textViewMotion" />

        <!-- Muscle Groups (множинний вибір через AlertDialog) -->
        <TextView
            android:id="@+id/textViewMuscleGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/muscle_groups"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/buttonSelectMotion"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonSelectMuscleGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chose"
            app:layout_constraintBottom_toBottomOf="@+id/textViewMuscleGroups"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textViewMuscleGroups"
            app:layout_constraintTop_toTopOf="@+id/textViewMuscleGroups" />

        <!-- Equipment (одиничний вибір через AlertDialog) -->
        <TextView
            android:id="@+id/textViewEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/equipment"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/buttonSelectMuscleGroups"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonSelectEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chose"
            app:layout_constraintBottom_toBottomOf="@+id/textViewEquipment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textViewEquipment"
            app:layout_constraintTop_toTopOf="@+id/textViewEquipment" />

        <!-- Кнопки: Cancel, Delete (тільки для редагування) та Save -->
        <!-- Для створення горизонтального ланцюга використовуємо ширину 0dp -->

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonSaveExercise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonSelectEquipment"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonDeleteExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/delete"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/buttonCancel"
            app:layout_constraintTop_toBottomOf="@+id/buttonCancel" />

        <Button
            android:id="@+id/buttonSaveExercise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/save"
            app:layout_constraintBottom_toBottomOf="@+id/buttonCancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonCancel"
            app:layout_constraintTop_toTopOf="@+id/buttonCancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

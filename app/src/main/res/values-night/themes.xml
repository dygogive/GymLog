<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Кольори \"Primary\" -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorOnPrimary">@color/my_on_primary</item>
        <item name="colorPrimaryContainer">@color/my_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/my_on_primary_container</item>

        <!-- Кольори \"Secondary\" -->
        <item name="colorSecondary">@color/my_secondary</item>
        <item name="colorOnSecondary">@color/my_on_secondary</item>
        <item name="colorSecondaryContainer">@color/my_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/my_on_secondary_container</item>

        <!-- Кольори \"Surface\" -->
        <item name="colorSurface">@color/my_surface</item>
        <item name="colorOnSurface">@color/my_on_surface</item>
        <item name="colorSurfaceVariant">@color/my_surface_variant</item>

        <!-- Фон загальний -->
        <item name="android:colorBackground">@color/my_background</item>
        <item name="colorOnBackground">@color/my_on_background</item>

        <!-- Android системні кольори (для вікна, статусу) -->
        <item name="android:windowBackground">?attr/android:colorBackground</item>
        <item name="android:navigationBarColor">?attr/android:colorBackground</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
</resources>
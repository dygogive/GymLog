<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/button_primary</item>
        <item name="colorOnPrimary">@color/button_text_primary</item>
        <item name="colorPrimaryContainer">@color/background_card</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/button_secondary</item>
        <item name="colorOnSecondary">@color/button_text_secondary</item>
        <item name="colorSecondaryContainer">@color/background_card</item>
        <item name="colorOnSecondaryContainer">@color/text_secondary</item>

        <!-- Surface -->
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/text_hint</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background_activity</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- System -->
        <item name="android:windowBackground">?attr/android:colorBackground</item>
        <item name="android:navigationBarColor">?attr/android:colorBackground</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

</resources>

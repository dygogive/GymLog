<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Стиль для діалогу з заокругленим фоном -->
    <style name="RoundedDialogTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
        <!-- Вимикаємо заголовок, якщо треба -->
        <item name="android:windowNoTitle">true</item>
        <!-- Застосовуємо наш фон із заокругленням -->
        <item name="android:windowBackground">@drawable/bg_dialog_rounded</item>
        <!-- Дозволяємо прозорість, якщо потрібно -->
        <item name="android:windowIsTranslucent">true</item>
    </style>




    <style name="RoundedDialogTheme2" parent="Theme.Material3.DayNight.Dialog" >
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowElevation">8dp</item>
    </style>

</resources>